<script>
// ====== ImgBB API KEY ======
const API_KEY = "481ca50b9f6baaff6ac1e1e4fe347cbd";

// ====== IMAGE UPLOAD FUNCTION ======
function uploadImage(){
  const file = document.getElementById("image").files[0];
  if(!file){
    alert("Select image first");
    return;
  }

  const formData = new FormData();
  formData.append("image", file);

  document.getElementById("status").innerText = "Uploading...";

  fetch("https://api.imgbb.com/1/upload?key=" + API_KEY, {
    method: "POST",
    body: formData
  })
  .then(res => res.json())
  .then(data => {
    document.getElementById("url").value = data.data.url;
    document.getElementById("status").innerText = "Upload Successful âœ…";
  })
  .catch(() => {
    document.getElementById("status").innerText = "Upload Failed âŒ";
  });
}

// ====== COPY URL FUNCTION ======
function copyURL(){
  const url = document.getElementById("url").value;
  if(!url){
    alert("No URL to copy");
    return;
  }
  navigator.clipboard.writeText(url);
  document.getElementById("status").innerText = "URL Copied âœ…";
}

// ====== SHARE BUTTON FUNCTION ======
function shareLink(){
  const url = document.getElementById("url").value;
  if(!url){
    alert("Upload image first");
    return;
  }

  // âœ… Modern Share API for mobile/browser/Android WebView
  if(navigator.share){
    navigator.share({
      title: "IMURLT Image Link",
      text: "Check out this image!",
      url: url
    }).then(() => {
      console.log("Shared successfully");
    }).catch(() => {
      alert("Share cancelled or failed");
    });
  } else {
    // Fallback for old browsers: open WhatsApp
    window.open("https://wa.me/?text=" + encodeURIComponent("Check this image: " + url), "_blank");
  }
}
</script>

